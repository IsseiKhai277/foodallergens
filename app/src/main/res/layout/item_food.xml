<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Food Name Header with Accent Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_gradient"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvFoodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

        </RelativeLayout>

        <!-- Main Content Section (Unified) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ingredients Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/spinner_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Ingredients"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

            <!-- Allergens Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mapped Allergens"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvMappedAllergens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mapped Allergens: "
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Predicted Allergens Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/allergen_chip_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Prediction"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvPredictedAllergens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Predicted: "
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Metrics Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Performance Metrics"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvMetrics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Metrics: "
                    android:textSize="11sp"
                    android:textColor="@color/text_hint"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Predict Button -->

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
